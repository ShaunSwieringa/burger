<div class="container bg">
	
	<div class="row">
	    <div class="center col-sm-12">
	        <h1>Eatin' burgers</h1>
	        <p></p>
	    </div>
  	</div>

	<div class="row">
	    <div class="col-sm-6">

			<br>
			<h2>Available Burgers</h2>

			<ul>
			  {{#each burgers}}
			    {{#unless this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}

			        <form action="/{{this.id}}?_method=PUT" method="POST">
			          <input type="hidden" name="devoured" value="true">
			          <button class="btn-primary" type="submit">Eatin' Time!</button>
			        </form>

			      </li>
			    {{/unless}}
			  {{/each}}
			</ul>

	    </div>

	    <div class="col-sm-6">

			<h2>Burgers you've eaten</h2>
			
			  {{#each burgers}}
			    {{#if this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}

			      </li>
			    {{/if}}
			  {{/each}}
			
	    </div>

  	</div>

	<div class="row">
	    <div class="center col-sm-12">

			<h2>Add Tasty Burgers</h2>

			<form class="create-update-form" action="/" method="POST">

			  <div class="form-group">
			    <p>Put in your desired burger and hit the make it button!</p>
			    <input type="text" id="add" name="burger_name">
			  </div>
			  
			  <button class="btn-primary" type="submit">Make it!</button>
			</form>

	    </div>
	
  	</div>

</div>